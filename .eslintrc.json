{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "impliedStrict": true,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "semi": 2,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "no-empty": 2,
        "indent": [2, 4],
        "arrow-spacing": 2,
        "no-var": 2,
        "prefer-template": 2,
        "no-this-before-super": 2,
        "no-cond-assign": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-extra-semi": 2,
        "no-unreachable": 2,
        "valid-typeof": 2,
        "no-multi-spaces": 2,
        "no-use-before-define": 2,
        "no-multiple-empty-lines": 2,
        "jsx-quotes": 2,
        "curly": 2,
        "no-redeclare": 2,
        "comma-dangle": 2,
        "comma-spacing": 1,
        "comma-style": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2
    },
    "plugins": [
        "react"
    ]
}
